                         @LIB_PREFIX@moapp.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mocompress.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@moconfig.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mocrypto.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@modata.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@moevent.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mofiber.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@moio.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mohttp.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mokernel.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mologging.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@momodest.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@monet.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mort.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mosql.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@mosqlite3.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@moupnp.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@moutil.@SHARED_LIB_EXTENSION@ \
                         @LIB_PREFIX@movalidation.@SHARED_LIB_EXTENSION@ 

