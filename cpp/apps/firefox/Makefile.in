BITMUNK_COMPONENT = @LIB_PREFIX@bitmunk-components.@SHARED_LIB_EXTENSION@ 
BITMUNK_MIME_HANDLER = @LIB_PREFIX@npbmd.@SHARED_LIB_EXTENSION@ 
