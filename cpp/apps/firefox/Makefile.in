                   @LIB_PREFIX@bmbfp.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmcustomcatalog.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmeventreactor.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmeventreactor-downloadstate.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmfilebrowser.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmmedialibrary.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmnegotiate.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmperuserdb.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmportmapper.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmpurchase.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmsell.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmsystem.@SHARED_LIB_EXTENSION@ \
                   @LIB_PREFIX@bmwebui.@SHARED_LIB_EXTENSION@ 

WEBUI_PLUGINS = help log login main purchase medialibrary settings

ifeq (@BITMUNK_RELEASE_MODE@,no)
PKI_FILES = test-bitmunk-ca-file.pem
else
PKI_FILES = bitmunk-ca-file.pem
endif

ifeq (@BITMUNK_RELEASE_MODE@,no)
WEBUI_PLUGINS += support debug test
endif

ifeq (@BITMUNK_RELEASE_MODE@,yes)
CONFIG_FILES = app.config \
               bitmunk.bfp.Bfp.config \
               bitmunk.catalog.CustomCatalog.config \
               bitmunk.medialibrary.MediaLibrary.config \
               bitmunk.purchase.Purchase.config \
               bitmunk.sell.Sell.config \
               bitmunk.system.System.config \
               bitmunk.webui.WebUi.config \
               events.config \
               node.config
else
CONFIG_FILES = app.config \
               bitmunk.bfp.Bfp.config \
               bitmunk.catalog.CustomCatalog.config \
               bitmunk.medialibrary.MediaLibrary.config \
               bitmunk.purchase.Purchase.config \
               bitmunk.sell.Sell.config \
               bitmunk.system.System.config \
               bitmunk.webui.WebUi.config \
               events.config \
               node.config
