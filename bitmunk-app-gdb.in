#!/bin/sh
# Run the Bitmunk app in GDB. Command line options are passed to the bitmunk
# application.

case "`uname -s`" in
   [Ll]inux)
      PLATFORM=linux ;;
   [Dd]arwin)
      PLATFORM=macos ;;
   *) echo "unknown platform"; exit 1 ;;
esac
@BITMUNK_DIR@/bitmunk-run gdb --args @BITMUNK_DIR@/dist/bin/bitmunk "$@"
