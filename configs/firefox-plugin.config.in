{
   "_id_": "bitmunk.apps.firefox-bpe.core",
   "_version_": "Monarch Config 3.0",
   "_group_": "after defaults",
   "_append_": {
      "monarch.app.Kernel": {
         "appPath": "{RESOURCE_PATH}/apps/@LIB_PREFIX@bitmunk.@DYNAMIC_LIB_EXT@"
      },
      "monarch.app.Config": {
         "appConfigs": [
            "{RESOURCE_PATH}/configs/conf.d"
         ]
      },
      "node": {
         "modulePath" : ["@BITMUNK_MODULES_DIR@"]
      }
   },
   "_merge_": {
      "monarch.app.Core": {
         "home": "@BITMUNK_HOME_DIR@"
      },
      "monarch.app.Logging": {
         "color": false,
         "level": "max"
      },
      "bitmunk.webui.WebUi": {
         "flash": {
            "policyServer": {
               "host": "@BITMUNK_LOCAL_API_HOST@",
               "port": @BITMUNK_FLASH_POLICY_PORT@
            }
         }
      },
      "node": {
         "host": "@BITMUNK_LOCAL_API_HOST@",
         "port": @BITMUNK_LOCAL_API_PORT@,
         "domains": [
            "*"
         ],
         "login": {
            "auto": false
         }
      }
   }
}
